		[\"People always wonder why\\nI wear a box on my head\", \"default\", \"owo\"],
		[\"They dont even know this box IS my head\", \"dead\", \"happy\"]
	],
	
	\"abt_wha\": [
		[\"[shake rate=100 level=6]Im obviously a cat!\\nDont be stupid!\", \"mad\", \"sad\"],
		[\"[wave]What makes you think\\nI'm not?\", \"pants\", \"happy\", true, 
			[\"You look like a demon.\", \"d\"]
		]
	],
	
	\"abt_wha_dem\": [
		[\"[wave]no...?\", \"pants\", \"happy\", true],
		[\"[wave]that's-... mega stupid~\", \"default\", \"happy\", true]
	],
	
	\"abt_wha_idk\": [
		[\"[wave]okay...?\", \"pants\", \"happy\", true]
	]
}

var answ = \"\"

func talk(id_dialog):
	current_dialog = dialogs[id_dialog]
	current_line = 0
	next_line()
	var lastdialog = id_dialog

func ask(questions):
	$questionbox.ask(questions)
	
func answer(ans):
	answ = ans

func next_line():
	if current_dialog:
